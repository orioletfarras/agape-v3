# Application
APP_NAME=agape-v3
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# API
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database (Development - Docker)
DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/agape_dev

# Database (Production - Aurora MySQL)
# Writer endpoint for writes
# DATABASE_URL=mysql+aiomysql://admin:your_password@database-2.cluster-csf25ija4rhk.eu-south-2.rds.amazonaws.com:3306/agape_prod
# Reader endpoint for reads (optional - for read replicas)
# DATABASE_READER_URL=mysql+aiomysql://admin:your_password@database-2.cluster-ro-csf25ija4rhk.eu-south-2.rds.amazonaws.com:3306/agape_prod
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security & JWT
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
OTP_EXPIRY_MINUTES=10
REGISTRATION_SESSION_EXPIRY_HOURS=24

# AWS - General
AWS_REGION=eu-south-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS S3 - File Storage
AWS_S3_REGION=eu-south-2
AWS_S3_BUCKET=agape-uploads
AWS_S3_PROFILE_IMAGES_PREFIX=profile-images/
AWS_S3_POST_IMAGES_PREFIX=post-images/
AWS_S3_POST_VIDEOS_PREFIX=post-videos/
AWS_S3_CHANNEL_IMAGES_PREFIX=channel-images/
AWS_S3_EVENT_IMAGES_PREFIX=event-images/

# AWS SES - Email
AWS_SES_REGION=eu-west-1
AWS_SES_FROM_EMAIL=noreply@agape.com
AWS_SES_REPLY_TO_EMAIL=support@agape.com

# AWS SNS - SMS
AWS_SNS_REGION=us-east-1
AWS_SNS_SENDER_ID=Agape

# Stripe - Payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=EUR

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token_if_needed

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime,video/x-msvideo
